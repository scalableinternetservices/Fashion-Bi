<% if user_signed_in? %>

<section>
  <div class="container text-xs-center">
    <div class="title">
      <h1>Editing Photo</h1>
    </div>

    <div class="col-md-4 offset-md-4">
    <%= form_for @photo, :url => { :action => :update } do |f| %>

        <%= image_tag @photo.image.url(:square), :class => "item-edit-img"%>
        <div class="form-group">
        <%= f.label :category %>
        <%= f.select(:category,
          [
            ["Shirt", "shirt"], ["Pants", "pants"],
            ["Jacket", "jacket"], ["Shoes", "shoes"]
          ], {}, { :class => 'form-control' })
            %>
        </div>

        <div class="form-group">
          <%= f.label :color %>
          <%= f.select(:color,
            [
              ['Blue', 'blue'], ['Black', 'black'],
              ['Yellow', 'yellow'], ['Green', 'green'], ['Purple', 'purple'],
              ['White', 'white'], ['Brown', 'brown'], ['Red', 'red'], ['Pink', 'pink']
            ],  {}, { :class => 'form-control' })
            %>
        </div>

        <fieldset class="form-group">
          <%= f.label :style, :class => 'radio-label'%>
          <div class="form-check radio">
            <label class="form-check-label">
              <% if @photo.style == "formal" %>
                  <input type="radio" name="style" value="formal" checked="checked" class="form-check-input"> Formal
              <% else %>
                  <input type="radio" name="style" value="formal" class="form-check-input"> Formal
              <% end %>
            </label>
          </div>
          <div class="form-check radio">
            <label class="form-check-label">
              <% if @photo.style == "casual" %>
                <input type="radio" name="style" value="casual" checked="checked" class="form-check-input"> Casual
              <% else %>
                <input type="radio" name="style" value="casual" class="form-check-input"> Casual
              <% end %>
            </label>
          </div>

        </fieldset>

        <div class="actions">
          <%= f.submit "Save changes", :class => 'btn btn-primary btn-login' %>
        </div>
      <% end %>

    <%= link_to 'Back', photos_path %>
  </div>
</section>
<% end %>
<%= yield %>
