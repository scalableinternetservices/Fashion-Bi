<h1>New Photo</h1>

<%= render 'form', photo: @photo %>

<%= form_for @photo, html: {multipart: true} do |f| %>
  <div class="field">
    <%= f.label :user_id %>
    <%= f.text_field :user_id, :required => true%>
  </div>
  <div class="field">
    <%= f.label :category %>
    <%= f.text_field :category, :required => true%>
  </div>
  <div class="field">
    <%= f.label :color %>
    <%= f.text_field :color, :required => true%>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image, :required => true%>
  </div>
  <div class="actions">
    <%= f.submit 'Submit Photo' %>
  </div>
<% end %>

<%= link_to 'Back', photos_path %>
