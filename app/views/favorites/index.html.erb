<section>
  <div class="container text-xs-center">
     <div class="row">
        <div class="col-xs-12">
            <div class="title text-xs-center">
                <h1>Favorites</h1>
            </div>
       </div>
     </div>
     <div class="row">
       <% if @photos.empty? %>
        <p>You currently do not have any favorites.</p>
       <% else %>
           <% @photos.each_slice(6) do |photo| %>
             <% cache(cache_key_for_rec_collage(photo)) do %>
               <div class="item shadow">
                   <div class="outfits">
                       <%= image_tag(photo[1].url(:square), :class => "item-img") %>
                       <%= image_tag(photo[0].url(:square), :class => "item-img") %>
                       <%= image_tag(photo[2].url(:square), :class => "item-img") %>
                       <%= image_tag(photo[3].url(:square), :class => "item-img") %>
                   </div>
                   <div class="actionbar">
                       <%= link_to("/favorites/?id="+photo[4].to_s+"&like=0", method: :post, class: "x-icon", id: "remove") do %>
                           <i class="fa fa-times fa-lg" aria-hidden="true"></i>
                       <% end %>
                   </div>
               </div>
             <% end %>
           <% end %>
       <% end %>
     </div>
   </div>



</section>
